            <Button x:Name="Task4Button" Content="Задание 4" Width="200" Click="Task4Button_Click"/>
            <Button x:Name="Task5Button" Content="Задание 5" Width="200" Click="Task5Button_Click"/>
        </WrapPanel>
        <Label Content="Подвал" Background="Aquamarine" DockPanel.Dock="Bottom"></Label>
        <Label Content="Меню" Background="AntiqueWhite" DockPanel.Dock="Left"/>
        <Canvas>
            <Image Source="/1.jpg" Canvas.Top="-165" Height="500" Width="150" Canvas.Left="10"/>
            <Image Source="/2.jpg" Canvas.Top="207" Height="500" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="10"/>
            <Image Source="/3.jpg" Canvas.Top="10" Height="500" Width="150" HorizontalAlignment="Center" Canvas.Left="596" VerticalAlignment="Top" Canvas.Right="10"/>
            <Image Source="/4.jpg" Height="120" Canvas.Top="238" Width="181" Canvas.Left="567" Canvas.Right="10"/>
        </Canvas>
    </DockPanel>
</Window>
