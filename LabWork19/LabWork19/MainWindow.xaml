<Window x:Class="LabWork19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork19"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="960">
            <TextBlock Text="Отображение данных" FontSize="30"/>
            <DataGrid Height="920" x:Name="OutputDataGrid"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <StackPanel Width="960">
                <TextBlock Text="Task2" FontSize="30"/>
                <Label Content="Часть названия фильма:" FontSize="20" Margin="20"/>
                <TextBox Height="50" Margin="20" x:Name="NameTextBox"/>
                <Label Content="Год:" FontSize="20" Margin="20"/>
                <TextBox Height="50" Margin="20" x:Name="YearTextBox"/>
                <Button Content="ПРИМЕР" FontSize="30" Width="300" HorizontalAlignment="Left" Margin="20" x:Name="InputButton" Click="InputButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</Window>
