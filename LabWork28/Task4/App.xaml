<Application x:Class="Task4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Task4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="Fonts/#Cormorant Garamond"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#FFFF00F5"/>
            <Setter Property="Margin" Value="0 5 5 5"/>
        </Style>
        
        <Style TargetType="Label" BasedOn="{StaticResource {x:Type Control}}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type Control}}"/>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Control}}"/>
        <Style TargetType="Button" x:Key = "ButtonStyleRed">
            <Setter Property="Background" Value="Red"/>
        </Style>
    </Application.Resources>
</Application>
