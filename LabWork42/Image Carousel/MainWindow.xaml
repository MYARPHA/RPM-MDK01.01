<Window x:Class="Image_Carousel.ImageCarousel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Carousel"
        mc:Ignorable="d"
        Title="Image Carousel" Height="450" Width="800">
    <Grid>
        <Image x:Name="imageChange" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Выбрать папку" Click="SelectFolderButton_Click" HorizontalAlignment="Left" Margin="10" Width="100" Height="100"/>
        <Button Content="Показать картинки" Click="StartButton_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Width="120" Height="100"/>
    </Grid>
</Window>
