<Window x:Class="Task1.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Подтверждение" Height="200" Width="450">
    <DockPanel>
        <Label Content="Вы хотите закрыть приложение?" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Content="Да" Width="40" Height="20" Click="YesButton_Click" IsDefault="True"/>
            <Button Content="Нет" Width="40" Height="20" Click="NoButton_Click"/>
        </DockPanel>
    </DockPanel>
</Window>
